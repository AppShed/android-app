<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">
	<View
		android:layout_width="match_parent"
		android:layout_height="20dp"
		android:background="#3462D7"/>
	<RelativeLayout
		android:layout_width="match_parent"
		android:background="#2C81FF"
		android:layout_height="60dp">

		<ImageView
			android:layout_width="match_parent"
			android:scaleType="centerCrop"
			android:layout_height="match_parent"
			android:src="@drawable/top_net"/>

		<ImageView
			android:layout_marginLeft="20dp"
			android:layout_centerVertical="true"
			android:id="@+id/img_menu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/menu_icon"/>
		<TextView
			android:layout_toRightOf="@+id/img_menu"
			android:layout_marginLeft="20dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:layout_centerVertical="true"
			android:textColor="@android:color/white"
			android:text="Appshed App Store"/>

	</RelativeLayout>

	<RadioGroup
		android:background="#305EDA"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_height="wrap_content"
		android:paddingTop="15dp"
		android:paddingBottom="15dp">

		<RadioButton
			android:textColor="@android:color/white"
			android:button="@null"
			android:gravity="center"
			android:text="FEATURED"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"/>

		<RadioButton
			android:textColor="@android:color/white"
			android:button="@null"
			android:gravity="center"
			android:text="CATEGORIES"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"/>

		<RadioButton
			android:textColor="@android:color/white"
			android:button="@null"
			android:gravity="center"
			android:text="SEARCH"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"/>
	</RadioGroup>

	<com.viewpagerindicator.UnderlinePageIndicator
		android:id="@+id/indicator"
		android:layout_height="3dp"
		android:layout_width="fill_parent"/>

	<android.support.v4.view.ViewPager
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/pager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.ekreative.stockdog.activities.HomeActivity"/>
</LinearLayout>