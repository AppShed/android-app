<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context=".MyActivity">

	<LinearLayout android:orientation="vertical" android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:gravity="center_horizontal"
				  android:layout_centerVertical="true">
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="Start phonegap" android:id="@+id/btn_start"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/btn_add_shortcut" android:text="add icon"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/btn_delete_shortcut" android:text="delete icon"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/btn_scan" android:text="Scanner"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/btn_open" android:text="Open Url"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/btn_apps" android:text="Apps"/>
	</LinearLayout>

</RelativeLayout>
